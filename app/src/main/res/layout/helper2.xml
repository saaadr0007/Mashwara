<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_adv_Slider_surchbuses_fragment"
        android:layout_width="match_parent"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="0dp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="180dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="35dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="35dp"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/rest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:background="@drawable/round"
                    android:onClick="getrestaurants"
                    android:backgroundTint="@color/accent_red"
                    android:src="@drawable/ic_restaurant" />

                <ImageView
                    android:id="@+id/furniture"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="30dp"
                    android:background="@drawable/round"
                    android:onClick="getfurniture"

                    android:backgroundTint="@color/accent_green"
                    android:src="@drawable/ic_furniture_store" />
                <ImageView
                    android:id="@+id/shopping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round"
                    android:onClick="getshopping"
                    android:src="@drawable/ic_shopping_mall"
                    android:layout_marginStart="30dp"
                    android:backgroundTint="@color/accent_brown"

                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:text="@string/restaurant"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:text="@string/furniture"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginStart="35dp"
                    android:text="Malls"


                    />

            </LinearLayout>
<!--            <View style="@style/Divider"-->
<!--                android:layout_marginBottom="5dp"-->
<!--                />-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="35dp"
                    android:layout_marginTop="2dp"

                    android:layout_marginLeft="35dp"
                    android:orientation="horizontal"

                    >

                    <ImageView
                        android:id="@+id/pumps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:onClick="getpumps"
                        android:backgroundTint="@color/accent_blue"

                        android:background="@drawable/round"
                        android:src="@drawable/ic_gas_station" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:id="@+id/cafe"
                        android:onClick="getCafe"
                        android:background="@drawable/round"
                        android:backgroundTint="@color/accent_amber"
                        android:src="@drawable/ic_cafe"  />
                    <ImageView
                        android:id="@+id/more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round"
                        android:src="@drawable/ic_casino"
                        android:onClick="getmore"
                        android:backgroundTint="@color/accent_pink"
                        android:layout_marginStart="30dp"

                        />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:text="Pumps"
                        android:textStyle="bold"
                        android:textColor="@color/white"



                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="45dp"
                        android:text="@string/cafe"
                        android:textColor="@color/white"
                        android:textStyle="bold"


                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/white"


                        android:layout_marginStart="46dp"
                        android:text="More..."


                        />

                </LinearLayout>



            </LinearLayout>
        </LinearLayout>

</androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>