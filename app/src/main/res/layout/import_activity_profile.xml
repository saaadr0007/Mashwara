<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:weightSum="1">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="?actionBarSize"
            android:background="@color/accent_indago"/>



        <ImageView
            android:id="@+id/profileUserImage"
            android:layout_width="fill_parent"
            android:layout_height="250dp"
            android:src="@drawable/man"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_weight="0.17" />

        <TextView
            android:id="@+id/profileUserName"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center"
            android:textSize="25dp"
            android:textColor="@color/blk"
            android:textStyle="bold"
            android:text="Display Name" />

<!--        <TextView-->
<!--            android:id="@+id/profileUserStatus"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="25dp"-->
<!--            android:gravity="center"-->
<!--            android:text="Your current Status"-->
<!--            android:textStyle="italic"-->
<!--            android:textColor="#FFFFFF"-->
<!--            android:textSize="17dp" />-->

        <TextView
            android:id="@+id/profileUserFriends"
            android:layout_width="match_parent"
            android:layout_marginTop="90dp"
            android:layout_height="25dp"
            android:textSize="17dp"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:text="Total Friends" />

        <Button
            android:id="@+id/profileSendReqButton"
            android:layout_width="284dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/accent_indago"
            android:text="Send Friend Request"
            android:layout_marginTop="10dp"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/profileDeclineReqButton"
            android:layout_width="293dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@color/accent_indago"
            android:text="Decline Friend Request"
            android:textColor="#FFFFFF" />

    </LinearLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/accent_indago"
        app:itemIconTint="@color/color_icons"
        android:layout_alignParentBottom="true"
        app:itemTextColor="@color/color_icons"
        app:layout_constraintBottom_toBottomOf="parent"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/navigation_menu" />
</RelativeLayout>